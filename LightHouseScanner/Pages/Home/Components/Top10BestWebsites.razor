<PageTitle>Home</PageTitle>
@inject ApiService ApiService


<section id="blog-posts" class="blog-posts section">
    <div class="container section-title" data-aos="fade-up">
        <h2>5 Best Page Speed Scores</h2>
        <p>View the websites with the highest overall performance scores. Analyze their success factors and implement similar strategies.</p>
    </div>

    <div class="container my-0">
        <div class="row">
            @if (websiteDataList != null && websiteDataList.Any())
            {
                @foreach (var website in websiteDataList)
                {
                    <div class="col-lg-4 mb-4">
                        <div class="card shadow-sm p-1">
                            <div class="card-img-top p-0">
                                @if (!string.IsNullOrEmpty(website.FinalScreenshot))
                                {
                                    <img src="@website.FinalScreenshot" alt="Final Screenshot" class="img-fluid rounded float-end shadow">
                                }
                                else
                                {
                                    <img src="" alt="Default Screenshot" class="img-fluid">
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-center mt-2">
                                    <a href="@website.DomainName" target="_blank" class="anchor-hover">
                                        @website.DomainName
                                    </a>
                                </h5>

                                @* <div class="col-12 text-center p-0">
                                    <i class="fa-solid fa-circle-check fa-beat me-1 font-size-14px"></i>
                                    <a class="anchor-hover1" data-bs-toggle="collapse" href="#collapse-Domain_@website.Id"
                                       role="button" aria-expanded="false" aria-controls="collapse-Domain_@website.Id">
                                        Website Audit Report
                                    </a>
                                </div> *@

                                <div class="collapse1" id="collapse-Domain_@website.Id">

                                    <div class="row mt-3">

                                        <div class="col-4 text-center mt-1">
                                            <div class="inner-content text-center m-1 m-md-0">
                                                <div class="c100 center @string.Format("p" + @website.Performance) @CommonExtensions.GetCSSPercentageClass(@website.Performance.ToString())" style="@MetricsFontSize">
                                                    <span>@website.Performance</span>
                                                    <div class="slice"><div class="bar"></div><div class="fill"></div></div>
                                                </div>
                                            </div>
                                            <p class="text-secondary pt-1">Performance</p>
                                        </div>

                                        <div class="col-4 text-center mt-1">
                                            <div class="inner-content text-center m-1 m-md-0">
                                                <div class="c100 center @string.Format("p" + @website.Accessibility) @CommonExtensions.GetCSSPercentageClass(@website.Accessibility.ToString())" style="@MetricsFontSize">
                                                    <span>@website.Accessibility</span>
                                                    <div class="slice"><div class="bar"></div><div class="fill"></div></div>
                                                </div>
                                            </div>
                                            <p class="text-danger pt-1">Accessibility</p>
                                        </div>

                                        <div class="col-4 text-center mt-1">
                                            <div class="inner-content text-center m-1 m-md-0">
                                                <div class="c100 center @string.Format("p" + @website.BestPractices) @CommonExtensions.GetCSSPercentageClass(@website.BestPractices.ToString())" style="@MetricsFontSize">
                                                    <span>@website.BestPractices</span>
                                                    <div class="slice"><div class="bar"></div><div class="fill"></div></div>
                                                </div>
                                            </div>
                                            <p class="text-success pt-1">Best Practices</p>
                                        </div>

                                        <div class="col-12 text-center mt-1">
                                            <div class="inner-content text-center m-1 m-md-0">
                                                <div class="c100 center @string.Format("p" + @website.Seo) @CommonExtensions.GetCSSPercentageClass(@website.Seo.ToString())" style="@MetricsFontSize">
                                                    <span>@website.Seo</span>
                                                    <div class="slice"><div class="bar"></div><div class="fill"></div></div>
                                                </div>
                                            </div>
                                            <p class="text-primary pt-1 fs-5">SEO</p>
                                        </div>
                                    </div>
                                    <hr class="horizontal dark mt-0">
                                    <WebsiteDetailMetrics Website="website" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center">No website data available.</p>
                </div>
            }
        </div>
    </div>

    <div class="container">
        <div class="row gy-4">

            <div class="col-lg-4">
                <article>

                    <div class="post-img">
